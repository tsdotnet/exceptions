{
  "name": "@tsdotnet/exceptions",
  "version": "1.1.0",
  "description": "",
  "author": "electricessence",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": "./dist/*"
  },
  "types": "dist/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "unpkg": "dist/umd/index.js",
  "jsdelivr": "dist/umd/index.js",
  "keywords": [
    "exceptions",
    "Exception",
    "ArgumentException",
    "ArgumentNullException",
    "ArgumentOutOfRangeException",
    "InvalidOperationException",
    "NullReferenceException",
    "SystemException"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "pnpm i && pnpm run clean && concurrently \"pnpm:build:*\"",
    "bump": "pnpm run precommit && pnpm version patch",
    "docs": "rimraf docs && typedoc --options typedoc.json --readme none",
    "lint": "eslint src/**/*.ts",
    "precommit": "pnpm i && concurrently \"pnpm:lint\" \"pnpm:test\" && concurrently \"pnpm:build:*\" && pnpm run validate && git status -s",
    "prepublishOnly": "pnpm run build && concurrently \"pnpm:validate\" \"pnpm:test\"",
    "preversion": "concurrently \"pnpm:lint\" \"pnpm:test\"",
    "postversion": "git push && git push --tags && pnpm run docs && git add -A && git commit -m \"Updated docs.\" docs && git push",
    "test": "tsx node_modules/mocha/bin/_mocha tests/**/*.ts",
    "validate": "node ./.build/validate-package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsdotnet/exceptions.git"
  },
  "bugs": {
    "url": "https://github.com/tsdotnet/exceptions/issues"
  },
  "homepage": "https://github.com/tsdotnet/exceptions#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "pnpm": {
    "overrides": {
      "hosted-git-info@<2.8.9": ">=2.8.9",
      "y18n@=4.0.0": ">=4.0.1",
      "lodash@<4.17.20": ">=4.17.20",
      "shell-quote@<=1.7.2": ">=1.7.3",
      "lodash@<4.17.21": ">=4.17.21",
      "json5@<1.0.2": ">=1.0.2",
      "json5@>=2.0.0 <2.2.2": ">=2.2.2",
      "minimatch@<3.0.5": ">=3.0.5",
      "word-wrap@<1.2.4": ">=1.2.4",
      "semver@<5.7.2": ">=5.7.2",
      "semver@>=6.0.0 <6.3.1": ">=6.3.1",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2",
      "get-func-name@<2.0.1": ">=2.0.1",
      "@babel/traverse@<7.23.2": ">=7.23.2",
      "braces@<3.0.3": ">=3.0.3"
    }
  }
}
